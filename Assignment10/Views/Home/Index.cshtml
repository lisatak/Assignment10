@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<!--Heading with the team name-->
<header class="card-header text-center">
    <h1>@Model.TeamName</h1>
</header>

<br />
<br />

<!--A card with each player and their info-->
@foreach (var x in Model.Bowlers)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h5>@x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName</h5>
            <p>@x.BowlerAddress</p>
            <p>@x.BowlerCity</p>
            <p>@x.BowlerState</p>
            <p>@x.BowlerZip</p>
            <p>@x.BowlerPhoneNumber</p>
        </div>

    </div>
}

<!--paging-->
<div page-info="@Model.PageNumberingInfo" 
     page-url-teamname="@Model.TeamName"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right"></div>
